@model RandevuTakip.ENTITIES.Appointment

@{
    ViewData["Title"] = "CreateAppointment";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Randevu Ekle | Koru Sigorta</title>
</head>
<body>
    <!-- NAVBAR - START -->
    <nav class="navbar navbar-expand-lg navbar-white bg-white">
        <div class="container-fluid">
            <a asp-controller="Appointment" asp-action="CreateAppointment">
                <img style="margin-left:40px; margin-top:20px" src="/293478-78723-koru sigorta logoRGB.jpg" width="167px" height="36px">
            </a>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav" style="margin-left:75px;">
              <li class="nav-item">
                <a class="nav-link" href="#">Hakkımızda</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Ürünler</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Basın Odası</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Kariyer</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">İletişim</a>
              </li>
              <li class="nav-item" style="margin-left:500px;">
                <a class="nav-link btn btn-outline-secondary" asp-controller="Appointment" asp-action="ExpectedAppointments">Personel Girişi</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <hr />
    <!-- NAVBAR - END -->
<!-- APPOINTMENT - START -->
    <div style="background-color: #fff9f9">
    <div class="container mt-5">
        <h3 class="mb-5" style="color:orange">Randevu Ekle</h3>
        <form method="post" asp-controller="Appointment" asp-action="CreateAppointment">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="UserName" class="form-label">Ad</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="UserName" type="text" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="UserSurname" class="form-label">Soyad</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="UserSurname" type="text" class="form-control">
                                <span asp-validation-for="UserSurname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="PolicyNumber" class="form-label">Poliçe No</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="PolicyNumber" type="text" class="form-control">
                                <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="IdentificationNumber" class="form-label">TC Kimlik Numarası</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="IdentificationNumber" type="text" class="form-control">
                                <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="PhoneNumber" class="form-label">Telefon No</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="PhoneNumber" type="phone" class="form-control">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="City" class="form-label">İl</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="City" type="text" class="form-control">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="District" class="form-label">İlçe</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="District" type="text" class="form-control">
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="AppointmentDate" class="form-label">Randevu Tarihi</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="AppointmentDate" type="date" class="form-control">
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Randevuyu Oluştur</button>
          </form>
    </div>
</div>
    <br><br><br>
    <!-- APPOINTMENT - END -->

    @*<a href="Appointment/ExpectedAppointments/">Personel Ekranı</a>*@

@section Scripts{
    <partial name="_ValidationScriptsPartial">
}
</body>